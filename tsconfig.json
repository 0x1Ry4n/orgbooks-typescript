        "incremental": true,
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*", "src/swagger-output.json"],
        },
    },
}
