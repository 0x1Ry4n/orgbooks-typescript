{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2022",
        "module": "commonjs",
        "moduleDetection": "force",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "typeRoots": ["src/@types", "/node_modules/@types"],
        "paths": {
            "@/*": ["./src/*"],
        },
    },
    "include": ["src", "src/**/*.ts", "tests/**/*.ts"],
}
